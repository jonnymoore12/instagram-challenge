<a href='/posts/new'>Add a post</a>
<br />

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h4> <%= post.caption %> </h4>
    <br />
    <%= link_to image_tag(post.image.url(:medium)), post_path(post) %>
    <br />
    <%= link_to "Edit caption", edit_post_path(post) %>
    <%= link_to "Delete post", post_path(post), method: :delete %>
  <% end %>
<% else %>
  No posts yet
<% end %>
